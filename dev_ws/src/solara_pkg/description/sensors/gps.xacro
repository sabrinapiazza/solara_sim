<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
<!-- GPS Sensor Macro (NEO-M8N) -->
<xacro:macro name="gps_sensor" params="parent_link *origin">
    
<!-- GPS Link -->
<link name="gps_link">
    <!-- Visual: Circular GPS module (NEO-M8N with integrated antenna) -->
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.0175" length="0.012"/>  <!-- 35mm diameter, 12mm tall -->
        </geometry>
        <material name="gps_black">
            <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
    </visual>
    
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <cylinder radius="0.0175" length="0.012"/>
        </geometry>
    </collision>
    
    <inertial>
        <mass value="0.010"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.000001" ixy="0.0" ixz="0.0"
                 iyy="0.000001" iyz="0.0"
                 izz="0.000001"/>
    </inertial>
</link>

<joint name="gps_joint" type="fixed">
    <parent link="${parent_link}"/>
    <child link="gps_link"/>
    <xacro:insert_block name="origin"/>
</joint>

</xacro:macro>
</robot> 