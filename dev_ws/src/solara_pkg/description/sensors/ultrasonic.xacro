<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <!-- Ultrasonic Sensor Macro (HC-SR04) -->
    <xacro:macro name="ultrasonic_sensor" params="parent_link *origin">
        <link name="ultrasonic_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>  <!-- 8mm radius, 15mm tall -->
            </geometry>
            <material name="ultrasonic_blue">
                <color rgba="0.2 0.5 0.8 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
        </collision>
        
        <inertial>
            <mass value="0.003"/>  <!-- 3 grams -->
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.000001" ixy="0.0" ixz="0.0"
                    iyy="0.000001" iyz="0.0"
                    izz="0.000001"/>
        </inertial>
    </link>

    <joint name="ultrasonic_joint" type="fixed">
        <parent link="${parent_link}"/>
        <child link="ultrasonic_link"/>
        <xacro:insert_block name="origin"/>
    </joint>
    </xacro:macro>
</robot> 